{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<div class="containH1">    
    <h1>Expositions</h1>
</div>

<a href="{{ path('exhibitAddBO') }}">Ajouter une exposition</a>

<section class="listExhibit">
    <p class="thExhibit">Titre</p>
    <p class="thExhibit">Date</p>
    <p></p>

    {% for exhibition in exhibitions %}
        <p>{{ exhibition.dateExhibitFr }} - {{ exhibition.titleExhibit }}</p>
        
        <p>
            <a href="{{ path('exhibitEditBO', {'id': exhibition.id}) }}">
                <i class="fa-solid fa-pencil"></i>
            </a>
            {# <a href="{{ path('exhibitDeleteBO', {'id': exhibition.id}) }}"> #}
                <i class="fa-solid fa-trash-can"></i>
            </a>
        </p>
    {% endfor %}
</section>
{% endblock %}


