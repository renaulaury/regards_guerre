{% extends 'base.html.twig' %}

{% block title %}Expositions{% endblock %}

{% block body %}
<div class="containH1">    
    <h1>Expositions</h1>
</div>


<section class="listExhibit">

    <a href="{{ path('exhibitAddBO') }}">Ajouter une exposition</a>

    {% for exhibition in exhibitions %}
        <p>{{ exhibition.dateExhibitFr }} - {{ exhibition.titleExhibit }}</p>
        
        <p>
            <a href="{{ path('exhibitEditBO', {'id': exhibition.id}) }}">
                <i class="fa-solid fa-pencil"></i>
            </a>

            <a href="{{ path('exhibitDetailBO', {'id': exhibition.id}) }}">
                <i class="fa-solid fa-pen-to-square"></i>
            </a>
            
            {# <a href="{{ path('deleteExhibitBO', {'id': exhibition.id}) }}"> #}
                <i class="fa-solid fa-trash-can"></i>
            </a>
        </p>
    {% endfor %}
</section>
{% endblock %}


