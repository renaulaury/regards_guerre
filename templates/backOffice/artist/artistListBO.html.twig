{% extends 'base.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block body %}
<div class="containH1">    
    <h1>Artistes</h1>
</div>

<a href="{{ path('artistAddBO') }}">Ajouter un artiste</a> 

<section class="listArtists">
