{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %} {# Fichier pour lancer la réinitalisation #}

    {% for flash_error in app.flashes('reset_password_error') %} {# Affichage des erreurs de réinitialisation #}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="containH1"> 
        <h1>Réinitialiser votre mot de passe</h1>
    </div> 
     
    <section>
        {{ form_start(requestForm) }}

        <div class="textReset">
            Saisissez votre email afin que l'on puisse vous envoyer un lien pour la réinitialisation de votre mot de passe.
        </div>

        <div class="blockSecuInput">
            <div class="label">{{ form_label(requestForm.userEmail) }}</div>
            <div class="input">{{ form_widget(requestForm.userEmail) }}</div>
        </div>

            <button class="btnSubmit button">Réinitialiser mon mot de passe</button>
        {{ form_end(requestForm) }}
    </section>
{% endblock %}
