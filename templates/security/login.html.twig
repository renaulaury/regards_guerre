{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes  {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1>Se connecter</h1>

        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required> 
        {#  autocomplete aide le nav c/ le vol de session par ex  #}

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div>
            <p>
                <input type="checkbox" name="rememberMe" id="rememberMe">
                <label for="rememberMe">Se souvenir</label>
            </p>
            <a href="{{ path('forgot_password_request')}}">Mot de passe oublié</a>
        </div>
        

        <button class="btn submit" type="submit">Connexion</button>
    </form>
{% endblock %}
