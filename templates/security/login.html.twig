{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="containH1">    
    <h1>BIENVENUE</h1>
</div>

<section class="secuLogin">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h2>Se connecter</h2>

        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required> 
        {#  autocomplete aide le nav c/ le vol de session par ex  #}

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div>
            <p>
                <input type="checkbox" name="rememberMe" id="rememberMe">
                <label for="rememberMe">Se souvenir</label>
            </p>
            <a href="{{ path('forgot_password_request')}}">Mot de passe oubli√©</a>
        </div>
        

        <button class="btn submit" type="submit">Connexion</button>
    </form>
</section>
{% endblock %}
